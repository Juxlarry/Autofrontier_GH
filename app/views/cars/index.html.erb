<style>
  .blocktext {
    margin-left: auto;
    margin-right: auto;
  
    margin: 0;
    position: relative;
    left: 50%;
    margin-right: -50%;
  }

  .nav-backend{
    margin-left: 37px;
    margin-bottom: 20px;
    margin-top: -25px;
  }
</style>
<main style="margin-left: 0; margin-top: 0;">
  <section id="main-content">
    <section class="wrapper" style="width: 100%;">
      <div class="row">
        <div class="col-12">
          <h1 class="blocktext">Cars</h1>
          <div class="separator mb-5"></div>
        </div>
      </div>
      <div class="row mb-4">
        <% if current_user.role_id == 1 || current_user.role_id == 2 #role of admin%> 
          <div class="nav-backend">
            <ul class="atds-channel-switcher atds-type-mini" role="menu"
              aria-labelledby="channel-switcher-heading">
              <li role="none" class="atds-channel-switcher__item"><a href="/car_types" role="menuitem"
                      aria-current="true"
                      class="atds-channel-switcher__link atds-channel-switcher__link--selected">Car Types</a>
              </li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_drives"
                      role="menuitem" aria-current="false"
                      class="atds-channel-switcher__link ">Drive Type</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_cylinders" role="menuitem"
                      aria-current="false" class="atds-channel-switcher__link ">Cylinders</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_engines" role="menuitem"
                      aria-current="false" class="atds-channel-switcher__link ">Engines</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_models"
                      role="menuitem" aria-current="false"
                      class="atds-channel-switcher__link ">Models</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_makes" role="menuitem"
                      aria-current="false" class="atds-channel-switcher__link ">Makes</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_transmissions" role="menuitem"
                      aria-current="false" class="atds-channel-switcher__link ">Transmissions</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_bodies" role="menuitem"
                      aria-current="false" class="atds-channel-switcher__link ">Body Type</a></li>
              <li role="none" class="atds-channel-switcher__item"><a href="/car_colours" role="menuitem"
                      aria-current="false" class="atds-channel-switcher__link ">Car Colours</a></li>
              <li role="none" class="atds-channel-switcher__item"><a
                      href="/fuel_types" role="menuitem" aria-current="false"
                      class="atds-channel-switcher__link  narrow-hide">Fuel Type</a>
              </li>
              <li role="none" class="atds-channel-switcher__item"><a
                      href="/car_documents" role="menuitem" aria-current="false"
                      class="atds-channel-switcher__link  narrow-hide">Documents</a>
              </li>
              <!--<% if user_signed_in? %>
                  <li role="none" class="atds-channel-switcher__item"><a
                      href="/cars" role="menuitem" aria-current="false"
                      class="atds-channel-switcher__link  narrow-hide">All Cars</a>
                  </li>
              <% end %>-->
            </ul>
          </div>
        <% end %>
        <div class="col-12 mb-4">
          <div class="card" style="width:100%; margin-left: 2%;">
            <div class="card-body">
              <div class="table-responsive bs-example widget-shadow">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>Car name</th>
                      <th>Make</th>
                      <th>Model</th>
                      <th>Car type</th>
                      <th>Body type</th>
                      <th>Colour</th>
                      <th>Car Engine</th>
                      <th>Transmission type</th>
                      <th>Fuel type</th>
                      <th>Car price (GH)</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @cars.each do |car_show| %>
                      <tr>
                        <td><%= car_show.car_name %></td>
                        <td><%= car_show.car_make %></td>
                        <td><%= car_show.car_model %> <%= car_show.car_model_year %></td>
                        <td><%= car_show.car_type %></td> 
                        <td><%= car_show.car_body %></td> 
                        <td><%= car_show.car_colour %></td>
                        <td><%= car_show.car_engine %></td>
                        <td><%= car_show.car_transmission %></td> 
                        <td><%= car_show.car_fuel %></td>
                        <td><%= car_show.car_price %></td>
                        <td><span id="badgeSpan" class="badge badge-primary"><%= link_to 'Show', car_show, id: "badgeSpan" %></span></td>
                        <td><span id="badgeSpan" class="badge badge-warning"><%= link_to 'Edit', edit_car_path(car_show) %></span></td>
                        <td><span id="badgeSpan" class="badge badge-danger"><%= link_to 'Delete', car_show, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>
              </div>
            </div>
          </div>
          <div class="blocktext" style="margin-top:5%; color:white">
            <%= link_to 'Add Car', new_car_path, class:'btn btn-primary', style:'color:white' %>
          </div>
        </div>
      </div>
    </section>
  </section>
</main>