<style>
  .blocktext {
    margin: 0;
    margin-left: auto;
    position: relative;
    left: 50%;
    margin-right: -50%;
  }

  .nav-backend{
    margin-left: 37px;
    margin-bottom: 20px;
    margin-top: -25px;
  }

  .row.match-height {
    margin-top: 12%;
    width: 90%;
    margin-left: 8%;
  }
</style>


<div class="wrapper">


  <!-- main menu-->

  <div class="main-panel">
    <!-- BEGIN : Main Content-->
    <div class="main-content">
      <div class="content-overlay"></div>
      <div class="content-wrapper">
        <div class="row match-height">
          <div class="col-xl-8 col-lg-12 col-12">
            <div class="card shopping-cart">
              <div class="card-header pb-2">
                <h4 class="card-title mb-1">New Cars</h4>
                <%= link_to 'Add Car', new_car_path, class:'btn btn-primary', style:'color:white; float:right;' %>
              </div>
              <div class="card-content">
                <div class="card-body p-0">
                  <div class="table-responsive">
                    <table class="table text-center m-0">
                      <thead>
                          <tr>
                              <th>Image</th>
                              <th>Product</th>
                              <th>Transmission</th>
                              <th>Amount</th>
                              <th colspan="3"></th>
                          </tr>
                      </thead>
                      <tbody>
                        <% @cars_user.each do |car_show| %>
                          <tr>
                            <td>
                              <%= image_tag(car_show.images[0], class:"height-50", alt:"Dynamic Car Placeholder image")   if car_show.images.length > 0 %>
                            </td>
                            <td><%= car_show.car_name %> <%= car_show.car_model %> <%= car_show.car_model_year %></td>
                            <td><%= car_show.car_transmission %></td> 
                            <td><%= car_show.car_price %></td>
                            <td><span id="badgeSpan" class="badge badge-primary"><%= link_to 'Show', car_show, id: "badgeSpan" %></span></td>
                            <td><span id="badgeSpan" class="badge badge-warning"><%= link_to 'Edit', edit_car_path(car_show) %></span></td>
                            <td><span id="badgeSpan" class="badge badge-danger"><%= link_to 'Delete', car_show, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
                          </tr>
                        <% end %>
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll to top button -->
    <button class="btn btn-primary scroll-top" type="button"><%= feather_icon "arrow-up" %></button>

  </div>
</div>

        

