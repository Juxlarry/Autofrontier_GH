<style>
  .blocktext {
      margin-left: auto;
      margin-right: auto;
  
      margin: 0;
    position: relative;
    left: 50%;
    margin-right: -50%;
  }
</style>
<main>
  <section id="main-content">
    <section class="wrapper">
      <div class="row">
        <div class="col-12">
          <h1 class="blocktext">Car Colours </h1>
          <div class="separator mb-5"></div>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-12 mb-4">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive bs-example widget-shadow">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Comments</th>
                      <th>Status</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @car_colours.each do |car_colour| %>
                      <tr>
                        <td><%= car_colour.name %></td>
                        <td><%= car_colour.comments %></td>
                        <td><%= car_colour.status %></td>
                        <td><span id="badgeSpan" class="badge badge-primary"><%= link_to 'Show', car_colour, id: "badgeSpan" %></span></td>
                        <td><span id="badgeSpan" class="badge badge-warning"><%= link_to 'Edit', edit_car_colour_path(car_colour) %></span></td>
                        <td><span id="badgeSpan" class="badge badge-danger"><%= link_to 'Delete', car_colour, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>
              </div>
            </div>
          </div>
          <div class="blocktext" style="margin-top:5%; color:white">
            <%= link_to 'Add Colour', new_car_colour_path , class:'btn btn-primary', style:'color:white' %>
          </div>
      </div>
    </section>
  </section>
</main>