<% flash.each do |key, value| %>
    <div align="center" id="flash" class="alert alert-<% if key.to_s == 'notice' %><%= 'info' %><% elsif key.to_s == 'success' %><%= 'success' %><% else key.to_s == 'danger' %><%= 'danger' %><% end %>">
        <button  aria-hidden="true" data-dismiss="alert" class="close" type="button"> Ã— </button>
        <%= value %>
    </div>
<% end %>

<script> 

    $('.alert-danger').fadeOut(4000);
    $('.alert-info').fadeOut(4000);

</script>
