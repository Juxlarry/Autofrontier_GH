<!DOCTYPE html>
<html>
  <head>
    <title>Autofrontier</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <% if user_signed_in? && (params[:action] != "welcome") && (params[:action] != "sell_cars")  && (params[:action] != "value_cars") && (params[:action] != "used_cars")  && (params[:action] != "new_cars") && (params[:action] != "show") %>

      <%= render 'layouts/sidelayout' %>
      
      
    <% end %>

    <%= render 'layouts/messages' %>
    
    <!--<p class="flash"><%= flash.notice %></p>
    <p class="flash"><%= flash.alert %></p>-->
    <%= yield %>
    
  </body>
</html>

