
<%= simple_form_for(@vehicleenquiry) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.input :phonenumber %>
    <%= f.input :message %>
    <%= f.input :status %>
    <%= f.input :enquirer_user_id %>
    <%= f.input :vehicle_user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
